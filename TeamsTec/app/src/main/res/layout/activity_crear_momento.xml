<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.scastro81.teamstec.Main.subFragmentAdd.CrearMomento">


    <TextView
        android:text="Crear Momento"
        android:textSize="28dp"
        android:id="@+id/TextViewCrearMomento"
        android:gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="nombre"
        android:id="@+id/textViewTitulo"
        android:layout_below="@+id/TextViewCrearMomento"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"

        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/editTextTitulo"
        android:layout_below="@+id/textViewTitulo"
        android:layout_width="match_parent"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="20dp"

        android:gravity="left"
        android:layout_height="wrap_content" />

    <TextView
        android:text="descripcion"
        android:id="@+id/textViewDesc"
        android:layout_below="@+id/editTextTitulo"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/editTextDesc"
        android:layout_below="@+id/textViewDesc"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"

        android:layout_marginRight="30dp"
        android:layout_height="wrap_content" />

    <Button
        android:text="Aceptar"
        android:id="@+id/btnAceptar"
        android:textSize="25dp"
        android:layout_marginLeft="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_alignBaseline="@+id/btnCancelar"
        android:layout_alignBottom="@+id/btnCancelar"
        android:layout_alignStart="@+id/editTextDesc" />

    <Button
        android:text="Cancelar"
        android:id="@+id/btnCancelar"
        android:textSize="25dp"
        android:layout_marginTop="92dp"
        android:layout_marginLeft="200dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextDesc"
        android:layout_alignEnd="@+id/editTextDesc" />

</RelativeLayout>
